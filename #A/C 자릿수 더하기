#include <string>
#include <vector>
using namespace std;

// 정수 n이 매개변수로 주어질 때 n의 각 자리 숫자의 합을 return하도록 solution 함수를 완성해주세요
int solution(int n)
{
    int answer = 0;
    string word = to_string(n);
    
    for (int i = 0; i < word.size(); i++)
        answer += (int)word[i] - 48;
    
    return answer;
}
